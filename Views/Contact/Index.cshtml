@model List<ContactModel>
@{
    ViewData["Title"] = "Lista de contatos";
}
<div class="text-center">
    <div class="d-grip gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-outline-primary" role="button" asp-controller="Contact" asp-action="Register">Registrar</a>
    </div>
    <br />
    @if (TempData["SucessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label"Close">X</button>
            @TempData["SucessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label"Close">X</button>
            @TempData["ErrorMessage"]
        </div>
    }
    <br />

    <h1 class="display-4">Lista de contatos cadastrados</h1>
    <table class="table table-striped" id="table-contacts"> 
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Celular</th>
                <th scope="col">Endereço</th>
                <th scope="col">N°</th>
                <th scope="col">Complemento</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
           @if (Model != null && Model.Any())
            {
                foreach (ContactModel contact in Model)
                {
                    <tr>
                        <th scope="row">@contact.Id</th>
                        <td>@contact.Name</td>
                        <td>@contact.Email</td>
                        <td>@contact.Phone</td>
                        <td>@contact.Address,@contact.City/@contact.Region</td>
                        <td>@contact.Number</td>
                        <td>@contact.Complement</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-outline-primary" asp-route-id="@contact.Id" asp-controller="Contact" asp-action="Alter">Editar</a>
                                <a role="button" class="btn btn-outline-secondary" asp-route-id="@contact.Id" asp-controller="Contact" asp-action="Delete">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>




</div>
