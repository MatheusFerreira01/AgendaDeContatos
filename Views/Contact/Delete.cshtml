@model ContactModel
@{
    ViewData["Title"] = "Cofirmação apagar o contato";
}

<div class="text-center w-100 p-3">
    <h3>Deseja apagar o contato selecionado(@Model.Name)?</h3>  
</div>
<a class="btn btn-primary d-flex justify-content-center p-2" role="button" asp-controller="Contact" asp-route-id="@Model.Id" asp-action="DeleteAction">Sim</a>
<br />
<a class="btn btn-secondary d-flex justify-content-center p-2" role="button" asp-controller="Contact" asp-action="Index">Não</a>